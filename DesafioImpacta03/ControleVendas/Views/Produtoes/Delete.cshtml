@model ControleVendas.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Excluir Produto</h1>
                    <hr />
                    <h3 class="text-danger">Tem certeza de que deseja excluir este produto?</h3>
                    <div class="row">
                        <div class="col-sm-3 font-weight-bold">Nome:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Nome)</div>
                        <div class="col-sm-3 font-weight-bold">Preço:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Preco)</div>
                        <div class="col-sm-3 font-weight-bold">Quantidade:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.quantidade)</div>
                        <div class="col-sm-3 font-weight-bold">Hora de Criação:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.HoraCriacao)</div>
                    </div>
                    <hr />
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProdutoID" />
                        <button type="submit" class="btn btn-danger">Excluir</button> |
                        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
