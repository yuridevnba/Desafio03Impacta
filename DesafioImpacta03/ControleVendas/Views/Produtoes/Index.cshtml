@model IEnumerable<ControleVendas.Models.Produto>

@{
    ViewData["Title"] = "Listar Produtos";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">@ViewData["Title"]</h1>
                    <p class="card-text text-center">Tabela de Produtos</p>
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Nome</th>
                                        <th>Preço</th>
                                        <th>Quantidade</th>
                                        <th>Hora de Criação</th>
                                        <th>Opções</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                                            <td>@Html.DisplayFor(modelItem => item.quantidade)</td>
                                            <td>@Html.DisplayFor(modelItem => item.HoraCriacao)</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.ProdutoID" class="btn btn-primary btn-sm">Editar</a>
                                                <a asp-action="Details" asp-route-id="@item.ProdutoID" class="btn btn-info btn-sm">Detalhes</a>
                                                <a asp-action="Delete" asp-route-id="@item.ProdutoID" class="btn btn-danger btn-sm">Excluir</a>
                                            </td>
                                        </tr>
                                        <tr class="spacer"></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Produto</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-container {
        max-width: 100%;
        margin: 0 auto;
    }

        .table-container .btn {
            width: 100px;
            margin-right: 10px;
        }

    .spacer {
        height: 10px;
    }

    tbody tr.clicked {
        background-color: #f0f0f0;
    }

    tbody tr:hover {
        background-color: #f5f5f5;
        cursor: pointer;
    }
</style>
