@model IEnumerable<ControleVendas.Models.Vendas>

@{
    ViewData["Title"] = "Tabela de Vendas";
}

<h1>Index</h1>

<div class="card">
    <div class="card-body">
        <p>
            <a class="btn btn-success" asp-action="Create">Create New</a>
        </p>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>@* 
                        <th>
                            @Html.DisplayNameFor(model => model.HoraVenda)
                        </th> *@
                        <th>
                            @Html.DisplayNameFor(model => model.produtos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.quantidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Preco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FuncionarioId)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td>
                                @Html.DisplayFor(modelItem => item.HoraVenda)
                            </td> *@
                            <td>
                                @Html.DisplayFor(modelItem => item.produtos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quantidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Preco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FuncionarioId)
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.VendasID">Edit</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.VendasID">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VendasID">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
