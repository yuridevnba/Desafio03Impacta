

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('https://blog.acoplastbrasil.com.br/wp-content/uploads/2019/10/original-af1ac0429d1566577821f3ca80d68efa.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .card-login {
            background-color: rgba(255, 255, 255, 0.6);
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .card-body {
            padding: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <div class="card card-login">
                    <div class="card-body text-center">
                        <h4 class="mb-4">Login Administrador</h4>
                        <form asp-action="Confirmed" method="post">
                           
                        </form>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Senha" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Entrar</button>

                        <!-- Link para cadastrar um administrador -->
                        <div class="mt-3">
                            <li >
                                <a  asp-area="" asp-controller="Adms" asp-action="Cadastrar">se Cadastre!</a>
                            </li>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
